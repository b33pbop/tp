@startuml
!include style.puml
skinparam ArrowFontStyle plain

Actor User as user USER_COLOR
Participant ":UI" as ui UI_COLOR
Participant ":Logic" as logic LOGIC_COLOR
Participant ":Model" as model MODEL_COLOR

user -[USER_COLOR]> ui : "view p/91234567"
activate ui UI_COLOR

ui -[UI_COLOR]> logic : execute("view p/91234567")
activate logic LOGIC_COLOR

logic -[LOGIC_COLOR]> model : getFilteredPersonList()
activate model MODEL_COLOR
model --[MODEL_COLOR]> logic : returns ObservableList<Person>
deactivate model

logic --[LOGIC_COLOR]> ui : CommandResult(showPerson=true, target=Person)
deactivate logic

ui --[UI_COLOR]> user : opens View Window with details

@enduml
